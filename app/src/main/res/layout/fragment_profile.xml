<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo Superior Curvo -->
    <View
        android:id="@+id/top_background_view"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_profile_top_curve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Círculos Decorativos -->
    <ImageView
        android:id="@+id/circle_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/circle_shape"
        android:alpha="0.3"
        app:tint="?attr/colorPrimaryVariant"
        app:layout_constraintStart_toStartOf="@id/top_background_view"
        app:layout_constraintTop_toTopOf="@id/top_background_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:contentDescription="Decorative Circle" />

    <ImageView
        android:id="@+id/circle_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/circle_shape"
        android:alpha="0.2"
        app:tint="?attr/colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="@id/top_background_view"
        app:layout_constraintBottom_toBottomOf="@id/top_background_view"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="Decorative Circle" />

    <!-- Imagen de Perfil -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_image_card"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="@id/top_background_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_background_view"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginTop="-40dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="User Profile Picture"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_placeholder" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Nombre de Usuario -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Nombre de Usuario"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image_card" />

    <!-- Email de Usuario -->
    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="usuario@example.com"
        android:textAppearance="?attr/textAppearanceBody2"
        android:alpha="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUserName" />

    <!-- Botón Cerrar Sesión -->
    <Button
        android:id="@+id/logoutButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cerrar Sesión"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUserEmail" />


    <!-- Título de Estadísticas -->
    <TextView
        android:id="@+id/recycled_items_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reciclaje Canjeado"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoutButton" />

    <!-- Contenedor de Estadísticas de Reciclaje (Adaptado) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/recycled_items_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:paddingStart="16dp"
       android:paddingEnd="16dp"
       android:paddingBottom="16dp">

       <!-- Plástico Card (Más grande) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/plastic_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorPrimaryVariant"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_plastic"
                        app:tint="?attr/colorOnPrimary"
                        android:contentDescription="Plastic Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plástico"
                        android:textColor="?attr/colorOnPrimary"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvCantidadPlastico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0.0 kg"
                        android:textColor="?attr/colorOnPrimary"
                        android:textAppearance="?attr/textAppearanceHeadline4"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Papel Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/paper_card_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?android:colorBackground"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_paper"
                            app:tint="?attr/colorOnSurface"
                            android:contentDescription="Paper Icon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Papel"
                                android:textAppearance="?attr/textAppearanceSubtitle1"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvCantidadPapel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="0.0 kg"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:alpha="0.7"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Orgánico Card (Adaptado de "Desperdicio") -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/organic_card_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?android:colorBackground"
                    android:layout_marginStart="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_desperdicio"
                            app:tint="?attr/colorOnSurface"
                            android:contentDescription="Orgánico Icon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Orgánico"
                                android:textAppearance="?attr/textAppearanceSubtitle1"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvCantidadOrganico"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="0.0 kg"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:alpha="0.7"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Metal Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metal_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?android:colorBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_metal"
                        app:tint="?attr/colorOnSurface"
                        android:contentDescription="Metal Icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Metal"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvCantidadMetal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="0.0 kg"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:alpha="0.7"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ProgressBar (Centrada y superpuesta) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>