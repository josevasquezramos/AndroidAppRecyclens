<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragments.DetailsFragment">

    <!-- Card para el último reciclaje -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardUltimoReciclaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textTituloUltimoReciclaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Último reciclaje"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textTipoUltimoReciclaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tipo: -"/>

            <TextView
                android:id="@+id/textCantidadUltimoReciclaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad: - kg"/>

            <TextView
                android:id="@+id/textFechaUltimoReciclaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha: -"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card para el PieChart -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPieChart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardUltimoReciclaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </androidx.cardview.widget.CardView>

    <!-- Card para la Frase del Día -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardFraseDelDia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardPieChart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textFraseDelDia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frase del día"
            android:textSize="18sp"
            android:layout_margin="16dp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>